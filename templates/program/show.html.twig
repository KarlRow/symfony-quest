{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.slug }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="img-fluid width: 100%" src="{{ program.poster }}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }} {{ programDuration }}</p>
            

                {% for season in program.seasons %}
                <div>
                        <div>Saison {{ season.number }}</div>
                        <a href="{{ path("program_season_show", { slug: program.slug, 'season': season.id }) }}">Voir la saison</a>
                </div>
            {% else %}
                Aucune saison trouvée.
            {% endfor %}
        </div>
    </div>
<strong>Acteurs :</strong>
    <ul>
        {% for actor in program.actors %}
            <li>{{ actor.name }}</li>
        {% else %}
            <li>Aucun acteur pour cette série</li>
        {% endfor %}
    </ul>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}
